<div class="col-md-6 col-md-offset-3">
    <form ng-submit="vm.login()" method="post">
        <h3>Login: </h3>
        <formly-form model="vm.loginInfo" fields="vm.loginFields" form="vm.loginForm">
            <button type="submit" class="btn btn-primary" ng-disabled="vm.loginForm.$invalid">Login</button>
            <a class="btn-link" href="/register">Register</a>
        </formly-form>
    </form>
</div>