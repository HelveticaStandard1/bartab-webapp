<% if (message.length > 0) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %>

<div class="col-md-6 col-md-offset-3">
    <form action="/login" method="post">
        <h3>Login: </h3>
        <formly-form model="vm.login" fields="vm.loginFields" form="vm.loginForm">
            <button type="submit" class="btn btn-primary" ng-disabled="vm.loginForm.$invalid">Login</button>
        </formly-form>
    </form>
</div>