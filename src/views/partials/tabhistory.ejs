<div class="row top-buffer"></div>

<div class="row">
    <div id="loader" ng-if='!vm.dataLoading'></div>
</div>

<div class="col-md-6 col-md-offset-3">
    <div class="row">
        <table class="table table-bordered table-striped" ng-if="vm.dataLoading">

            <thead>
            <tr>
                <td>
                    PIN
                </td>
                <td>
                    Date
                </td>
                <td>
                    Location
                </td>
                <td>
                    Total
                </td>
                <td>
                    Status
                </td>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="item in vm.data">
                <td>
                    <a class="btn-link" href="/tabdeetz/?pin={{item.pin}}"> {{ item.pin }}</a>
                </td>
                <td> {{ item.createdAt }}</td>
                <td> {{ item.location }}</td>
                <td> {{ item.total | currency}}</td>
                <td> {{ item.status }}</td>
            </tr>
            </tbody>
        </table>
    </div>

</div>